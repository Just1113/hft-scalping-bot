# ============================================
# BYBIT API CONFIGURATION
# ============================================
# Get these from Bybit testnet/live dashboard
BYBIT_API_KEY=your_testnet_api_key_here
BYBIT_API_SECRET=your_testnet_api_secret_here

# Set to false for live trading (BE CAREFUL!)
BYBIT_TESTNET=true

# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
# Create bot via @BotFather and get token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Get your chat ID by messaging @userinfobot
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================
# TRADING CONFIGURATION
# ============================================
# Trading pair
TRADING_SYMBOL=BTCUSDT

# Leverage (1-100)
LEVERAGE=5

# Maximum position size in BTC
MAX_POSITION_SIZE=0.001

# Maximum number of open trades
MAX_OPEN_TRADES=2

# Risk management (percentages)
STOP_LOSS_PCT=0.3
TAKE_PROFIT_PCT=0.2
MAX_DAILY_LOSS_PCT=1.0

# ============================================
# MACHINE LEARNING CONFIGURATION
# ============================================
# Minimum confidence for trading signals (0.0-1.0)
PREDICTION_CONFIDENCE=0.70

# ============================================
# PERFORMANCE CONFIGURATION
# ============================================
# Data fetch interval in seconds
DATA_FETCH_INTERVAL=0.5

# ============================================
# DATABASE CONFIGURATION
# ============================================
# SQLite database path
DATABASE_URL=sqlite+aiosqlite:///./data/trades.db

# ============================================
# RENDER SPECIFIC
# ============================================
# Set to true when deploying on Render
RENDER=true
